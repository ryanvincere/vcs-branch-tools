{
  "manifest_version": 2,
  "name": "VCS Branch Tools",
  "description": "Create VCS branch naming from project management tools",
  "version": "0.2",
  "author": "Ryan Adhitama",
  "browser_action": {
    "default_title": "VCS Branch Tools",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png",
    "16": "icon.png",
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.1.8.2.js"]
    }
  ],
  "permissions": ["activeTab", "tabs"]
}
